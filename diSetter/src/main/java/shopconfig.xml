<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd">
            
      <bean id="Shop" class="edu.jsp.diSetter.bean.Shop">
      <property name="id" value="01"></property>
      <property name="name" value="Gada electronics"></property>
      <property name="items">
      <map>
      <entry key="mobile" value="3000"></entry>
      <entry key="Tv" value="70000"></entry>
      <entry key="A/c" value="45000"></entry>
      </map>
      
      </property> 
      </bean>
      

</beans>